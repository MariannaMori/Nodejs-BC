<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customers</title>
    <link rel="stylesheet" href="/styles/basicstyles.css">
</head>
<body>
    <main>
        <h1>All customers</h1>
        <table>
            <thead>
                <tr>
                    <th>Customer id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Favourite Icecream</th>
                    <th>Customer Class</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(customer =>{ %>
                    <tr>
                        <td><%= customer.customerId %></td>
                        <td><%= customer.firstname %></td>
                        <td><%= customer.lastname %></td>
                        <td><%= customer.favouriteIceCream %></td>
                        <td><%= customer.customerclass %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/"><button>Menu</button></a>
    </main>
    
</body>
</html>
